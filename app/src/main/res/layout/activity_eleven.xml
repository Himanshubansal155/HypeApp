<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rc.myapplication.Eleven"
    android:background="@drawable/quiz3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q1.  Rabindranath Tagore&apos;s &apos;Jana Gana Mana&apos; has been adopted as India&apos;s National Anthem. How many stanzas of the said song were adopted?"
        android:id="@+id/textView17"
        android:layout_marginTop="48dp"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView17"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third and Fourth stanza"
            android:id="@+id/radioButton"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The whole song"
            android:id="@+id/radioButton2"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First and Second stanza"
            android:id="@+id/radioButton3"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only the first stanza"
            android:id="@+id/radioButton4"
            android:checked="false"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button37"
        android:background="@android:drawable/ic_media_ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score is :  0/5"
        android:id="@+id/textView35"
        android:layout_alignBottom="@+id/button37"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:textSize="30dp" />

</RelativeLayout>
